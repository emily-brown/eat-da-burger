<h1>Eat-Da-Burger!</h1>

<main id="background">
    <div class="container">
        <div class="burger-before">
            <div class="col s6">

                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>

            <div class="burger-after">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
</main>

<div class="submit-row">
    <div class="col s12">
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="">
            <button type="submit" class="addBurgerButton">Submit</button>
        </form>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h5>Enter a burger that you're craving and hit the submit button. Your burger craving will appear on top of the list of the devoured burgers. Click it to add it to the devoured list</h5>
        </div>
    </div>
</div>